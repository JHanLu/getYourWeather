{
  "manifest_version": 2,

  "name": "GetYourWeather",
  "description": "GetYourWeather将会显示您所在地未来几天的气温",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
	"tabs","*://api.seniverse.com/"
  ],
  "content_security_policy": "default-src 'self'; script-src 'self' ; connect-src https://api.seniverse.com; style-src 'self' 'unsafe-inline'"
}
